# Variáveis de ambiente - Tech10 Backend
# COPIE ESTE ARQUIVO PARA .env E CONFIGURE COM VALORES REAIS

# Ambiente
NODE_ENV=development
PORT=3001

# Segurança - GERE NOVOS SECRETS USANDO:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_session_secret_here_min_64_chars
JWT_SECRET=your_jwt_secret_here_min_64_chars

# Banco de dados
DB_PATH=./database/tech10.db

# Upload de arquivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Admin padrão - ALTERE EM PRODUÇÃO
ADMIN_EMAIL=admin@tech10info.com
ADMIN_PASSWORD=change_this_password_in_production

# Configurações do site
SITE_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
